.titleview{width: 100%;display: flex;justify-content: space-between;align-items: center;box-sizing: border-box;padding: 20rpx 40rpx;background: #ededed;font-size: 35rpx;font-weight: bold;color: #040404}
.titleview image{width: 166rpx;height: 166rpx;border-radius: 100rpx}

.titleviewt{width: 100%; color: #4c4646;margin-bottom: 30rpx}
.tite{width: 690rpx;margin: 0 auto;margin-top: 30rpx;box-shadow: 0rpx 0rpx 5rpx 5rpx #f5f5f5;position: relative}

.tite:first-of-type .title_bottm{background: #0088bc}
.tite:nth-of-type(2) .title_bottm{background: #009b4d}
.tite:nth-of-type(3)  .title_bottm{background: #373737;color: #fff}
.tite:nth-of-type(4) .title_bottm{background: #b5121c;color: #fff}


.tite:after{content: '';background: #fff;display: block;width: 30rpx;height: 30rpx;border-radius: 25rpx;position: absolute;bottom: 40rpx;left: -15rpx;border-right: 1px solid #efefef;}
.tite:before{content: '';background: #fff;display: block;width: 30rpx;height: 30rpx;border-radius: 25rpx;position: absolute;bottom: 40rpx;right: -15rpx;border-left: 1px solid #efefef;}

.tite .title_top{display: flex;width: 100%;box-sizing: border-box;padding: 38rpx 30rpx;}
.tite .title_top .stt text:last-of-type{font-size: 50rpx;font-weight: bold}
.tite .title_top .titletop_m{font-size: 25rpx;text-align: center;color: #b5121c;width: 150rpx;font-weight: bold}
.tite .title_top .titletop_js{padding-left: 50rpx}
.tite .title_top .titletop_js text:first-of-type{font-size: 25rpx;font-weight: bold;color: #000000;display: block}
.tite .title_top .titletop_js text:last-of-type{font-size: 20rpx;color: #ededed}
.tite .title_bottm{width: 100%;box-sizing: border-box;padding: 15rpx 30rpx;background: #b5121c;color: #fff;font-size: 20rpx;font-weight: bold}